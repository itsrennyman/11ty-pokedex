---
pagination:
  data: pokemon
  alias: pkmn
  size: 1

title: "Pokemon List"
permalink: '/pokemon/{{pkmn.name|slug}}/'
---

{% extends 'layouts/main.njk' %}
{% block content %}
  <div class="h-screen p-10 bg-green-300 flex flex-col" style="background-color:{{ colors[pkmn.types[0]] }}">
    <div class="flex justify-between">
      {% if pagination.href.previous %}
        <a href="{{ pagination.href.previous }}" class="items-center text-white text-2xl font-extrabold">
            Previous
            <div class="text-white text-sm font-bold">
              Charizard
            </div>
        </a>
      {% else %}&nbsp;{% endif %}
      {% if pagination.href.next %}
        <a href="{{ pagination.href.next }}" class="text-right items-center text-white text-2xl font-extrabold">
            Next
            <div class="text-white text-sm font-bold">
              Charizard
            </div>
        </a>
      {% else %}&nbsp;{% endif %}
    </div>
    <h2 class="order-1 text-white text-2xl font-extrabold">
      # {{ pkmn.id }}
    </h2>
    <h1 class="order-1 text-white text-5xl font-extrabold tracking-tight mt-2">
      {{ pkmn.name | ucfirst }}
    </h1>
    <div class="flex flex-1 justify-center items-center">
      {% image "./src/_includes/assets/sprites/" + pkmn.id + ".png",
      pkmn.name,
      "300px 300px" %}
    </div>
  </div>
{% endblock %}